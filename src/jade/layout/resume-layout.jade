extends ./layout.jade
include ../mixins/util.jade

block title
  title= resume_title

block style
  link(rel='stylesheet', href="index.css")

block header
  header.row
    section.title
      h1= name
      h2= job_description.join("/")
    address
      ul.contact
        +phone(contact.phone)
        +email(contact.email)
        +github(contact.github)
        +blog(contact.blog)

block content
  article.content.row
      block education
      block experience
      block skills
    //- article.column-6.first.column
    //- article.column-6.last.column


block footer
  footer
    block repo


//- block sidebar
  aside
    block links

block IEcondition
    <!--[if lte IE 8]>
    .lte-ie8-comment-wrapper
      p.lte-ie8-comment #{lt_ie8_comment}
    <![endif]-->
